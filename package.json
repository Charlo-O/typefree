{
  "name": "typefree",
  "version": "3.2.0",
  "description": "Desktop dictation app with cloud speech-to-text (OpenAI, Groq, Z.ai)",
  "private": true,
  "scripts": {
    "dev": "cd src && vite",
    "build": "cd src && vite build",
    "preview": "cd src && vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "format:js": "eslint . --fix && cd src && eslint . --fix && prettier --ignore-path ../.prettierignore --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format": "npm run format:js",
    "format:check": "eslint . && cd src && eslint . && prettier --ignore-path ../.prettierignore --check \"**/*.{js,jsx,ts,tsx,json,css,md}\""
  },
  "keywords": [
    "dictation",
    "speech-to-text",
    "tauri",
    "desktop-app",
    "openai",
    "groq",
    "zhipu"
  ],
  "author": {
    "name": "TypeFree Team",
    "email": "support@typefree.com"
  },

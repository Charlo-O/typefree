{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Typefree",
  "version": "3.0.0",
  "identifier": "com.typefree.app",
  "build": {
    "beforeDevCommand": "cd src && npm run dev",
    "devUrl": "http://localhost:5174",
    "beforeBuildCommand": "cd src && npm run build",
    "frontendDist": "../src/dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Typefree",
        "width": 420,
        "height": 320,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "resizable": false,
        "visible": true,
        "skipTaskbar": false,
        "x": 100,
        "y": 100,
        "backgroundColor": "#00000000"
      },
      {
        "label": "control",
        "title": "Typefree - Control Panel",
        "url": "?panel=true",
        "width": 800,
        "height": 600,
        "alwaysOnTop": false,
        "decorations": true,
        "transparent": false,
        "resizable": true,
        "visible": true,
        "center": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    },
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": null,
      "nsis": {
        "installerIcon": "icons/icon.ico"
      }
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": null,
      "frameworks": [],
      "infoPlist": "Info.plist",
      "minimumSystemVersion": "10.13",
      "providerShortName": null,
      "signingIdentity": null
    }
  },
  "plugins": {}
}